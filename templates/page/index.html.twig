{# templates/page/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<!-- Header -->
<section class="hero-header min-vh-75 d-flex align-items-center position-relative bg-gradient-dark">
  <span class="mask bg-gradient-dark opacity-6 position-absolute top-0 start-0 w-100 h-100"></span>
  <div class="container position-relative z-index-2 text-white">
    <div class="row justify-content-center text-center">
      <div class="col-lg-8">
        <h1 class="display-4 fw-bold text-white mb-3">Willkommen im Editor-Projekt</h1>
        <p class="lead opacity-8">Ein moderner, browserbasierter Editor f√ºr kreatives Arbeiten.</p>

        <div class="mt-5">
          {% if app.user %}
            <p class="text-white-50">
              Eingeloggt als <strong class="text-white">{{ app.user.userIdentifier }}</strong>.  
              <a href="{{ path('app_logout') }}" class="text-white text-decoration-underline ms-1">Abmelden</a>
            </p>
          {% else %}
            <p class="text-white-50">
              <a href="{{ path('app_login') }}" class="text-white text-decoration-underline">Anmelden</a>
              <span class="mx-1">oder</span>
              <a href="{{ path('app_register') }}" class="text-white text-decoration-underline">Registrieren</a>
            </p>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>


{% endblock %}
