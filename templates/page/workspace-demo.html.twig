{% extends 'base.html.twig' %}

{% block title %}Editor-Demo
{% endblock %}

{% block body %}
  <main class="vh-100 vw-100 pt-3 pb-3 editorsite">
    <section class="container-fluid h-100">
      <div class="row h-100">
        <!-- Editor links -->
        <div class="col-12 col-md-8 d-flex flex-column editor-side">
          <div class=" flex-grow-1 d-flex flex-column">
            <div id="editor" class="h-100">
              <div class="editor-toolbar btn-toolbar mb-2" role="toolbar">
    
                <!-- 1. Texttyp-Dropdown -->
                <div class="btn-group me-2" role="group">
                  <select id="block-type" class="form-select form-select-sm">
                    <option value="paragraph">Absatz</option>
                    <option value="heading1">Überschrift 1</option>
                    <option value="heading2">Überschrift 2</option>
                    <option value="heading3">Überschrift 3</option>
                    <option value="heading4">Überschrift 4</option>
                    <option value="heading5">Überschrift 5</option>
                  </select>
                </div>
    
                <!-- 2. Schriftart-Dropdown -->
                <div class="btn-group me-2" role="group">
                  <select id="font-family" class="form-select form-select-sm">
                    <option value="Arial">Arial</option>
                    <option value="Georgia">Georgia</option>
                    <option value="Times New Roman">Times New Roman</option>
                    <option value="Courier New">Courier New</option>
                    <option value="monospace">Monospace</option>
                  </select>
                </div>
    
                <!-- 3. Schriftgrößen-Dropdown -->
                <div class="input-group input-group-sm me-2" style="width: 80px;">
                  <select id="font-size" class="form-select">
                    <option value="12px">12</option>
                    <option value="14px" selected>14</option>
                    <option value="16px">16</option>
                    <option value="18px">18</option>
                    <option value="24px">24</option>
                    <option value="32px">32</option>
                  </select>
                  <input type="text" id="font-size-input" class="form-control" value="14px"/>
                </div>
    
    
                <!-- 4. Formatierungs-Buttons -->
                <button class="btn btn-outline-secondary btn-sm" data-action="toggleBold">
                  <i class="fas fa-bold"></i>
                </button>
                <button class="btn btn-outline-secondary btn-sm" data-action="toggleItalic">
                  <i class="fas fa-italic"></i>
                </button>
                <button class="btn btn-outline-secondary btn-sm" data-action="toggleUnderline">
                  <i class="fas fa-underline"></i>
                </button>
                <button class="btn btn-outline-secondary btn-sm" data-action="toggleStrike">
                  <i class="fas fa-strikethrough"></i>
                </button>
    
                <!-- 5. Listen -->
                <button class="btn btn-outline-secondary btn-sm" data-action="toggleBulletList">
                  <i class="fas fa-list-ul"></i>
                </button>
                <button class="btn btn-outline-secondary btn-sm" data-action="toggleOrderedList">
                  <i class="fas fa-list-ol"></i>
                </button>
                <button class="btn btn-outline-secondary btn-sm" data-action="toggleTaskList">
                  <i class="fas fa-tasks"></i>
                </button>
    
                <!-- 6. Ein-/Ausrücken -->
                <button class="btn btn-outline-secondary btn-sm" data-action="indent">
                  <i class="fas fa-indent"></i>
                </button>
                <button class="btn btn-outline-secondary btn-sm" data-action="outdent">
                  <i class="fas fa-outdent"></i>
                </button>
    
                <!-- 7. Bilder und Tabellen -->
                <button class="btn btn-outline-secondary btn-sm" data-action="insertImage">
                  <i class="fas fa-image"></i>
                </button>
                <button class="btn btn-outline-secondary btn-sm" data-action="insertTable">
                  <i class="fas fa-table"></i>
                </button>
    
              </div>
              <div id="editorpage" class="editor-container" data-content="{{ content|e('html_attr') }}"></div>
            </div>
          </div>
        </div>
  
        <!-- Chat rechts -->
        <div class="col-12 col-md-4 d-flex flex-column note-side">
          <div class="info-box flex-fill bg-white mb-2">
            <h6>Notzien</h6>
            <form class="d-flex" role="search">
              <input class="form-control" type="search" placeholder="Search" aria-label="Search"/>
              <button class="btn" type="submit">Search</button>
            </form>
          </div>
          <div class="llm-chat bg-white text-dark mt-2" id="llm-chat-box">
            <div class="mt-3">
              <h6>Antwort:</h6>
              <div id="llm-response" class="border p-2 rounded" style="min-height: 80px;">
                Noch nichts gefragt.
              </div>
            </div>
            <form id="llm-form">
              <textarea class="form-control mb-2" id="llm-input" rows="3" placeholder="Frage an das LLM..."></textarea>
              <button type="submit" class="btn btn-primary w-100">Absenden</button>
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>

	<script type="module" src="{{ asset('build/editor.js') }}"></script>

{% endblock %}
